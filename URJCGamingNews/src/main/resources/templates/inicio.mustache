  <!-- ################################################################################################ -->
  <!-- ################################################################################################ -->
  <!-- ################################################################################################ -->
  <div class="wrapper bgded overlay" style="background:black;">
    <!-- Slideshow container -->
    <div class="slideshow-container">

      <!-- Full-width images with number and caption text -->
      {{#noticiasSlider}}
      <div class="mySlides fade">
        <img src="images/{{imagen}}" class="imgPortada">
        <article>
          <a href = "noticia?title={{titulo}}" style="text-decoration:none; color:inherit">
          		<h3 class="heading">{{titulo}}</h3>
          </a>	
          <p>{{descripcion}}</p>
        </article>
        
      </div>
      {{/noticiasSlider}}

      <!-- Next and previous buttons -->
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>

    <!-- The dots/circles -->
    <div style="text-align:center">
      <span class="dot" onclick="currentSlide(1)"></span> 
      <span class="dot" onclick="currentSlide(2)"></span> 
      <span class="dot" onclick="currentSlide(3)"></span> 
    </div>
  </div>


  <!-- ################################################################################################ -->
  <!-- ################################################################################################ -->
  <!-- ################################################################################################ -->
  <div class="wrapper row3">
    <main class="hoc container clear"> 
      <!-- main body -->
      <!-- ################################################################################################ -->
      <div class="group">
        <div class = "content one_half first">

          <h3>NOTICIAS FRESCAS</h3>
			{{#listaTotalArticulos}}
          		<div class="one_half first">
            		<img class="inspace-10 borderedbox" src="images/{{imagen}}" alt="">
          		</div>

          		<div class="one_half">
          			<a href = "noticia?title={{titulo}}" style="text-decoration:none; color:inherit">
	            		<p>{{titulo}}</p>
	            	</a>
	            	<p>{{descripcion}}</p>

          		</div>
          		
			{{/listaTotalArticulos}}

        </div>
        <div class="one_quarter">
          <h3>GAMEPLAYS</h3>

          <iframe width="380" height="180" src="https://www.youtube.com/embed/IEWygZDo17c"></iframe>

          <iframe width="380" height="180" src="https://www.youtube.com/embed/RB9uOAdzq24"></iframe>
        </div>
      </div>
      <!-- ################################################################################################ -->
      <!-- / main body -->
      <div class="clear"></div>
    </main>
